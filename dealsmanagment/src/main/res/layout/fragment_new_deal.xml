<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2GisBlueLight"
    android:layout_marginBottom="?attr/actionBarSize">

    <LinearLayout
        android:id="@+id/root_linear_layout_new_deal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color2GisBlueLight"
        android:focusableInTouchMode="true"
        android:focusable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/type_new_deal_text_view"
                android:text="deal's type"
                style="@style/NewDealTextView"/>
            <TextView
                android:id="@+id/status_new_deal_text_view"
                android:text="deal's status"
                style="@style/NewDealTextView"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <AutoCompleteTextView
                android:id="@+id/name_text_view_new_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_deal_firm_name"
                android:layout_weight="0.1"
                android:textAlignment="center" />
            <ToggleButton
                android:id="@+id/firm_name_toggle_button_new_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <AutoCompleteTextView
                android:id="@+id/contractor_text_view_deal_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_weight="0.1"
                android:hint="Юр.лицо заказчика"/>
            <ToggleButton
                android:id="@+id/contractor_toggle_button_new_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:checked="true"/>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/start_date_new_deal_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_weight="1"
                android:text="xx.xx.xxxx"/>

            <TextView
                android:id="@+id/duration_new_deal_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textAlignment="center"
                android:layout_weight="1.5"
                android:maxLength="2"
                android:text="00"/>

            <TextView
                android:id="@+id/finish_date_new_deal_text_view"
                android:text="xx.xx.xxxx"
                style="@style/NewDealTextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/volume_price_new_deal_text_view"
                android:text="V price"
                style="@style/NewDealTextView"/>
            <TextView
                android:id="@+id/volume_real_new_deal_text_view"
                android:text="V real"
                style="@style/NewDealTextView"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <TextView
                android:id="@+id/to_pay_new_deal_text_view"
                android:text="sum to pay"
                style="@style/NewDealTextView"/>
            <TextView
                android:id="@+id/payment_date_plan_new_deal_text_view"
                android:text="date to pay"
                style="@style/NewDealTextView"/>
        </LinearLayout>

        <TextView
            android:id="@+id/owner_new_deal_text_view"
            style="@style/NewDealTextView"
            android:layout_weight="0"
            android:text="owner"/>

        <Button
            android:id="@+id/new_deal_ok_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ok"/>

    </LinearLayout>
</ScrollView>